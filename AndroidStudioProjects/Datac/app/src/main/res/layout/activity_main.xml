<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff1dd0ff">


    <TextView android:text="اختر نوع المدخل"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextView1"
        android:textColor="#ffffe537"
        android:background="#ff070975"
        android:textSize="26sp"
        android:gravity="right"
        />
    <Spinner
    android:id="@+id/spinner1"
    android:layout_width= "match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="87dp"
    android:layout_below="@id/TextView1"
    android:gravity="right"
        />

    <Button
        android:background="@drawable/button_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="موافق"
        android:textColor="#ffffff"
        android:clickable="true"
        android:padding="10dp"
        android:textSize="30sp"
        android:id="@+id/ButtonSelect"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Toolbar.Button.Navigation"

         />
    <Button
        android:background="@drawable/button_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="خروج"
        android:textColor="#ffffff"
        android:clickable="true"
        android:padding="10dp"
        android:textSize="30sp"
        android:id="@+id/ButtonExit"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="48dp"
        android:layout_alignParentLeft="true"

        style="@style/Widget.AppCompat.Toolbar.Button.Navigation"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewGPS"
        android:layout_below="@+id/ButtonExit"
        android:textSize="20sp"
        android:visibility="invisible"
        android:background="#ff7b111b"
        android:layout_marginTop="5dp"
        android:textColor="#fffffb0e"
         />

</RelativeLayout>
